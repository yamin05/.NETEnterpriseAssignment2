@using Assignment2.Models
@model IEnumerable<ListClientsViewModel>

@{
    ViewBag.Title = "Clients Details";
}

<h2>Clients Details</h2>

<p>
    @Html.ActionLink("Create New", "CreateClient")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.clientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.clientLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.createDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.clientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.clientLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.createDate)
        </td>
        <td>
        <td>
            @Html.ActionLink("View Associated Interventions", "ViewAssociatedInterventions", new { id = item.clientID })
        </td>
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
