@model IEnumerable<Assignment2.Models.UserViewModel>

@{
    ViewBag.Title = "ListOfUsers";
}

<h2>Users List</h2>
<hr />
<p>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaximumCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaximumHours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.District)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaximumCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaximumHours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.District)
        </td>
        <td>
            @Html.ActionLink("Change District", "ChangeDistrictForUsers", new { userId = item.UserId })
        </td>
    </tr>
}

</table>
